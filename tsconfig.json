{
    "compilerOptions": {
        "baseUrl": "./src",
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "isolatedModules": true,
        "jsx": "react",
        "lib": [
            "es6"
        ],
        "module": "esnext",
        "moduleResolution": "node",
        "noEmit": true,
        "strict": true,
        "target": "es6",
        "outDir": "dist",
        "sourceMap": false,
        "paths": {
            "*": ["*", "/*"]
        }
    },
    "include": ["src/**/*.tsx"],
    "exclude": [
        "node_modules",
        "babel.config.js",
        "metro.config.js",
        "jest.config.js"
    ]
}